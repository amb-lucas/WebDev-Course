    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% for(let i=0; i<items.length; i++) { %>
          <div class="item">
            <input type="checkbox">
            <p><%= items[i] %></p>
          </div>
        <% } %>
      
        <form class="item" action="/" method="post">
          <input autocomplete="off" placeholder="New item" type="text" name="newItem">
          <button type="submit" name="button">+</button>
        </form>
      
      </div>
  </body>
